{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["es2023"],
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "sourceMap": true,

    "outDir": "./dist"
  },

  "include": ["src", "eslint.config.js", "tests", "crypto-utils"]
}
